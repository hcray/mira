<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/completeInfo_activity_rv1"
        style="@style/title"
        android:layout_alignParentTop="true"
        android:background="#81d8cf"
        android:visibility="visible" >

        <TextView
            android:id="@+id/completeInfo_activity_tv_title"
            style="@style/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/completeInfo_activity_title"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/completeInfo_activity_lv2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeInfo_activity_rv1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/completeInfo_activity_userface"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:clickable="true"
            android:padding="3.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/widget_dface" />

        <TextView
            android:id="@+id/completeInfo_activity_tv_uploadPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/completeInfo_activity_uploadPic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/completeInfo_activity_lv3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeInfo_activity_lv2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/completeInfo_activity_tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/completeInfo_activity_nickName" />

        <EditText
            android:id="@+id/completeInfo_activity_et_nickName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/completeInfo_activity_lv4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeInfo_activity_lv3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/completeInfo_activity_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:text="@string/completeInfo_activity_sex" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:contentDescription="@string/completeInfo_activity_sex" >

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/completeInfo_activity_sex_man" >
            </RadioButton>

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/completeInfo_activity_sex_woman" >
            </RadioButton>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/completeInfo_activity_lv5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeInfo_activity_lv4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/completeInfo_activity_tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/completeInfo_activity_birthday" />
        
        <EditText 
            android:id="@+id/completeInfo_activity_et_birthday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/completeInfo_activity_lv6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeInfo_activity_lv5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/completeInfo_activity_tv_skinType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/completeInfo_activity_skinType" />
        
        <EditText 
            android:id="@+id/completeInfo_activity_et_skinType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/completeInfo_activity_lv7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeInfo_activity_lv6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/completeInfo_activity_btn_complete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/completeInfo_activity_complete" />
    </LinearLayout>

</RelativeLayout>