<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MRIndexActivity" 
    android:background="#e4f3f2">

    <RelativeLayout
        android:id="@+id/title"
        style="@style/title"
        android:background="#81d8cf"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/leftbtn"
            style="@style/table_back_line"
            android:onClick="back"
            android:visibility="gone" >
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            style="@style/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_activity_tv_diary"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/ib_camera"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            style="@style/table_more_set"
            android:src="@drawable/ico_camera"
            android:contentDescription="@string/activity_index_camera" />
    </RelativeLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#e4f3f2" 
        android:orientation="vertical">
        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginStart="20dp"
	        android:layout_marginEnd="20dp"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal">
        
	        <EditText android:id="@+id/et_selectDt"
	            android:layout_width="100dp"
	            android:layout_height="30dp"
	            android:textColor="#999999"
	            android:inputType="none"
	            android:background="@drawable/input_date"
	            android:text="2015-01-01"
	            android:textSize="14sp"
	            android:paddingStart="10dp"
	            android:paddingEnd="5dp"
	            android:paddingBottom="5dp"
          	  	android:paddingTop="5dp"
	            />
	        <ImageButton android:id="@+id/index_activity_ib_calender" 
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginStart="10dp"
	            android:background="#00000000"
	            android:src="@drawable/ico_date_pick"
	            android:contentDescription="@string/activity_index_calender"
	            android:labelFor="@+id/et_selectDt"
	            android:scaleType="centerInside"/>
	        
	       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="end" >
	         <TextView 
		    	android:id="@+id/userInfo_activityi_iv_userface"
		      	android:layout_width="wrap_content"
		        android:layout_height="30dip"
		        android:scaleType="fitCenter"
		        android:padding="3.0dip"
				android:clickable="true"
		        android:text="杭州"
		        android:drawableEnd="@drawable/ico_select"
		        android:drawablePadding="5dp"
		       	/>
         </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:baselineAligned="false" 
	        >
	        
            <LinearLayout
                android:id="@+id/index_activity_ll_arrowLeft"
               	android:layout_width="wrap_content"
	        	android:layout_height="200dp"
	        	android:layout_weight="1"
	        	android:gravity="center_vertical|center">
	        	<ImageButton android:id="@+id/index_activity_ib_arrowLeft"
	        	    android:background="#00000000"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/arrowleft_29_47"
		            android:contentDescription="@string/index_activity_arrowLeft_desc"/>
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/index_activity_ll_imgSwitcher"
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_weight="8"
	        	>
		        
		        <ImageSwitcher android:id="@+id/imgSwitcher"
		            android:layout_width="wrap_content"    
			        android:layout_height="200dp" />
            </LinearLayout>
	        	
           <LinearLayout 
                android:id="@+id/index_activity_ll_arrowRight"
                android:layout_width="wrap_content"
	        	android:layout_height="200dp"
	        	android:gravity="center_vertical|center"
	        	android:layout_weight="1"
	        	>
		        
		        <ImageButton android:id="@+id/index_activity_ib_arrowRight"
		            android:background="#00000000"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/arrowright_29_47"
		            android:contentDescription="@string/index_activity_arrowRight_desc"/>
            </LinearLayout>
	        
        </LinearLayout>
        
       <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
        
	        <TextView android:layout_width="wrap_content"
	          		android:layout_height="wrap_content"
	          		android:textSize="20sp"
	          		android:layout_marginBottom="10dp"
	          		android:layout_marginStart="20dp"
	          		android:layout_marginTop="10dp"
	          		android:text="@string/index_activity_today_result"/>
	        <TextView android:layout_width="wrap_content"
	          		android:layout_height="wrap_content"
	          		android:textSize="20sp"
	          		android:layout_marginTop="10dp"
	          		android:layout_marginStart="20dp"
	          		android:text="@string/index_activity_my_cream"/>
	        <TextView android:layout_width="wrap_content"
	          		android:layout_height="wrap_content"
	          		android:textSize="20sp"
	          		android:layout_marginTop="10dp"
	          		android:layout_marginStart="20dp"
	          		android:text="@string/index_activity_my_mood"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>