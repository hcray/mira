<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e4f3f2"
    android:orientation="vertical"
    tools:context="com.mira.MRSetActivity" >

    <RelativeLayout
        android:id="@+id/title"
        style="@style/title"
        android:background="#84dfd8"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/set_back_ll"
            style="@style/table_back_line"
            >

            <ImageView style="@style/table_back_image" 
                android:contentDescription="@string/btn_back_value"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            style="@style/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/set_activity_title_name"
            android:textColor="@color/white" />

        <Button
            style="@style/table_more_set"
            android:onClick="complete"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_activity_rl_wifi_upload"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout_bottom_border"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/wifi_upload_pic"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ico_peoplemsg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/set_activity_tv_wifi_upload_pic_value"
            android:textColor="#999999"
            android:textSize="16.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_activity_rl_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/layout_bottom_border"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/set_activity_gps"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ico_peoplemsg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/set_activity_tv_gps_value"
            android:textColor="#999999"
            android:textSize="16.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_activity_rl_alarm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/set_activity_alarm"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ico_peoplemsg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/set_activity_tv_alarm_value"
            android:textColor="#999999"
            android:textSize="16.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_activity_rl_weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_bottom_border"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/set_activity_weixin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ico_peoplemsg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/set_activity_tv_weixin_value"
            android:textColor="#999999"
            android:textSize="16.0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/set_activity_tv_no_binding"
            android:textColor="#999999" 
            android:drawablePadding="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_activity_rl_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/layout_bottom_border"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/set_activity_qq"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ico_peoplemsg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/set_activity_tv_qq_value"
            android:textColor="#999999"
            android:textSize="16.0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/set_activity_tv_no_binding"
            android:textColor="#999999" 
            android:drawablePadding="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_activity_rl_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/set_activity_weibo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ico_peoplemsg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/set_activity_tv_weibo_value"
            android:textColor="#999999"
            android:textSize="16.0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/set_activity_tv_binding"
            android:textColor="#999999" 
            android:drawablePadding="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_activity_rl_suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_bottom_border"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/set_activity_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ico_peoplemsg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/set_activity_tv_suggestion_value"
            android:textColor="#999999"
            android:textSize="16.0dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_activity_rl_check_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/set_activity_check_update"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ico_peoplemsg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/set_activity_tv_check_update_value"
            android:textColor="#999999"
            android:textSize="16.0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/set_activity_tv_version"
            android:textColor="#999999" 
            android:drawablePadding="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/set_activity_bt_quit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#49c6bd"
            android:gravity="center"
            android:text="@string/my_activity_btn_logout"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>