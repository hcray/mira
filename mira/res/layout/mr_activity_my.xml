<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MRMyActivity" >

    <RelativeLayout
        android:id="@+id/title"
        style="@style/title"
        android:layout_alignParentTop="true"
        android:background="#81d8cf"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/leftbtn"
            style="@style/table_back_line"
            android:onClick="back"
            android:visibility="gone" >

            <ImageView style="@style/table_back_image" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            style="@style/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/white" />

        <Button
            style="@style/table_more_set"
            android:onClick="complete"
            android:text="" />
    </RelativeLayout>
   
    <LinearLayout
        android:orientation="vertical"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:padding="15.0dip">
        
        	<RelativeLayout
		    	android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content">
	    	    <ImageView 
			    	android:id="@+id/user_info_userface"
			      	android:layout_width="70dip" 
			        android:layout_height="70dip"
			        android:scaleType="fitCenter"
			        android:padding="3.0dip"
					android:clickable="true"
			        android:src="@drawable/widget_dface"/>
	    	    <LinearLayout     	
	    	        android:layout_width="fill_parent" 
    				android:layout_height="wrap_content"
    				android:orientation="vertical"
    				android:layout_marginLeft="10dip"
    				android:layout_toRightOf="@id/user_info_userface">
				   	<TextView 
			       		android:id="@+id/user_info_username"  
			    		android:layout_width="wrap_content" 
			           	android:layout_height="wrap_content" 
			           	android:layout_marginBottom="10.0dip"
			           	android:textSize="15.0dip"
			           	android:text="小花"/>
				   	
				   	<TextView 
			       		android:id="@+id/user_info_sign"  
			    		android:layout_width="wrap_content" 
			           	android:layout_height="wrap_content" 
			           	android:layout_marginBottom="10.0dip"
			           	android:textSize="15.0dip"
			           	android:text="熊二的嫂子"
			            />
				   	
				   	<RelativeLayout  
				   	    android:layout_width="fill_parent" 
    					android:layout_height="fill_parent">
					   	<TextView 
				       		android:id="@+id/user_info_level"  
				    		android:layout_width="wrap_content" 
				           	android:layout_height="wrap_content" 
				           	android:layout_marginBottom="10.0dip"
				           	android:textSize="15.0dip"
				           	android:text="V11"
				            />
					   	
				   	      <ImageButton
					    	android:id="@+id/user_info_ibtn_help"
					      	android:layout_width="18dip" 
					        android:layout_height="18dip"
					        android:layout_marginLeft="10.0dip"
				           	android:layout_alignParentRight="true"
				           	android:scaleType="fitCenter"
				           	android:layout_marginRight="20sp"
					        android:background="@drawable/help"
					        />
				   	      
					  	<TextView 
				       		android:id="@+id/user_info_grades"  
				    		android:layout_width="wrap_content" 
				           	android:layout_height="wrap_content" 
				           	android:layout_marginBottom="10.0dip"
				           	android:textSize="15.0dip"
				           	android:layout_toLeftOf="@id/user_info_ibtn_help"
				           	android:text="0积分"
				            />
			   	
				   	</RelativeLayout>
				   	
	    	    </LinearLayout>

		    </RelativeLayout>
        
    </LinearLayout>
    
    <RelativeLayout  
        android:id="@+id/my_activity_rl_user_info"
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="15dp"
		>
     		<TextView 
	       		android:id="@+id/user_info"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_marginBottom="10.0dip"
	           	android:textSize="20.0dip"
	           	android:text="个人资料"
	            />
     		
     		   <ImageView 
			    	android:id="@+id/user_info_ico"
			      	android:layout_width="18dip" 
			        android:layout_height="18dip"
			        android:layout_marginLeft="10.0dip"
		           	android:layout_alignParentRight="true"
		           	android:scaleType="fitCenter"
		           	android:layout_marginRight="20sp"
			        android:src="@drawable/right"/>
	</RelativeLayout>
    <RelativeLayout
        android:id="@+id/my_activity_rl_changes"
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="15dp">
     		<TextView 
	       		android:id="@+id/user_info_change"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_marginBottom="10.0dip"
	           	android:textSize="20.0dip"
	           	android:text="我的变化"
	            />
     		
     		   <ImageView 
			    	android:id="@+id/user_info_change_ico"
			      	android:layout_width="18dip" 
			        android:layout_height="18dip"
			        android:layout_marginLeft="10.0dip"
		           	android:layout_alignParentRight="true"
		           	android:scaleType="fitCenter"
		           	android:layout_marginRight="20sp"
			        android:src="@drawable/right"/>
	</RelativeLayout>
    <RelativeLayout
        android:id="@+id/my_activity_rl_history"
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="15dp">
     		<TextView 
	       		android:id="@+id/user_info_history"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_marginBottom="10.0dip"
	           	android:textSize="20.0dip"
	           	android:text="历史记录"
	            />
     		
     		   <ImageView 
			    	android:id="@+id/user_info_history_ico"
			      	android:layout_width="18dip" 
			        android:layout_height="18dip"
			        android:layout_marginLeft="10.0dip"
		           	android:layout_alignParentRight="true"
		           	android:scaleType="fitCenter"
		           	android:layout_marginRight="20sp"
			        android:src="@drawable/right"/>
	</RelativeLayout>
    <RelativeLayout  
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="15dp">
     		<TextView 
	       		android:id="@+id/user_info_moodSaying"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_marginBottom="10.0dip"
	           	android:textSize="20.0dip"
	           	android:text="心情语录"
	            />
     		
     		   <ImageView 
			    	android:id="@+id/user_info_moodSaying_ico"
			      	android:layout_width="18dip" 
			        android:layout_height="18dip"
			        android:layout_marginLeft="10.0dip"
		           	android:layout_alignParentRight="true"
		           	android:scaleType="fitCenter"
		           	android:layout_marginRight="20sp"
			        android:src="@drawable/right"/>
	</RelativeLayout>
    <RelativeLayout  
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="15dp"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp"
		>
     		<TextView 
	       		android:id="@+id/user_info_plan"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_marginBottom="10.0dip"
	           	android:textSize="20.0dip"
	           	android:text="护肤计划"
	            />
     		
     		   <ImageView 
			    	android:id="@+id/user_info_plan_ico"
			      	android:layout_width="18dip" 
			        android:layout_height="18dip"
			        android:layout_marginLeft="10.0dip"
		           	android:layout_alignParentRight="true"
		           	android:scaleType="fitCenter"
		           	android:layout_marginRight="20sp"
			        android:src="@drawable/right"/>
	</RelativeLayout>
    <RelativeLayout  
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="15dp">
     		<TextView 
	       		android:id="@+id/user_info_shop"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_marginBottom="10.0dip"
	           	android:textSize="20.0dip"
	           	android:text="积分商城"
	            />
     		
     		   <ImageView 
			    	android:id="@+id/user_info_shop_ico"
			      	android:layout_width="18dip" 
			        android:layout_height="18dip"
			        android:layout_marginLeft="10.0dip"
		           	android:layout_alignParentRight="true"
		           	android:scaleType="fitCenter"
		           	android:layout_marginRight="20sp"
			        android:src="@drawable/right"/>
	</RelativeLayout>
	
    <RelativeLayout  
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="15dp"
		android:layout_marginTop="10dp">
     		<TextView 
	       		android:id="@+id/user_info_setting"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_marginBottom="10.0dip"
	           	android:textSize="20.0dip"
	           	android:text="设置"
	            />
     		
     		   <ImageView 
			    	android:id="@+id/user_info_setting_ico"
			      	android:layout_width="18dip" 
			        android:layout_height="18dip"
			        android:layout_marginLeft="10.0dip"
		           	android:layout_alignParentRight="true"
		           	android:scaleType="fitCenter"
		           	android:layout_marginRight="20sp"
			        android:src="@drawable/right"/>
	</RelativeLayout>

</LinearLayout>
