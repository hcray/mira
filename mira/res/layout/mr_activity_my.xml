<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MRMyActivity" 
    android:background="#e4f3f2">

    <RelativeLayout
        android:id="@+id/title"
        style="@style/title"
        android:background="#84dfd8"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/leftbtn"
            style="@style/table_back_line"
            android:onClick="back"
            android:visibility="gone" >

            <ImageView style="@style/table_back_image" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            style="@style/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_activity_title_name"
            android:textColor="@color/white" />

        <Button
            style="@style/table_more_set"
            android:onClick="complete"
            android:text="" />
    </RelativeLayout>
   
    <LinearLayout
        android:orientation="vertical"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:padding="10.0dip"
		android:background="@color/white">
        
        	<RelativeLayout
		    	android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content">
	    	    <ImageView 
			    	android:id="@+id/user_info_userface"
			      	android:layout_width="70dip" 
			        android:layout_height="70dip"
			        android:scaleType="fitCenter"
			        android:padding="3.0dip"
					android:clickable="true"
			        android:src="@drawable/ico_info_pic"
			        android:contentDescription="@string/my_activity_iv_user_info_userface_desc"/>
	    	    <LinearLayout     	
	    	        android:layout_width="fill_parent" 
    				android:layout_height="wrap_content"
    				android:orientation="vertical"
    				android:layout_marginStart="10dip"
    				android:layout_marginTop="20dp"
    				android:layout_toEndOf="@id/user_info_userface"
    				>
				   	<TextView 
			       		android:id="@+id/my_activity_nickName"  
			    		android:layout_width="wrap_content" 
			           	android:layout_height="wrap_content" 
			           	android:layout_marginBottom="10.0dip"
			           	android:textSize="15.0dip"
			           	android:text="Mira's Fans"
			           	android:textColor="#84dfd8"/>
				   	
				   	<!-- 
				   	<TextView 
			       		android:id="@+id/my_activity_sign"  
			    		android:layout_width="wrap_content" 
			           	android:layout_height="wrap_content" 
			           	android:layout_marginBottom="10.0dip"
			           	android:textSize="15.0dip"
			           	android:text="222"
			            />
				   	 -->
				   	
				   	<LinearLayout  
				   	    android:layout_width="fill_parent" 
    					android:layout_height="fill_parent">
    					<!-- 
					   	<TextView 
				       		android:id="@+id/my_activity_level"  
				    		android:layout_width="wrap_content" 
				           	android:layout_height="wrap_content" 
				           	android:layout_marginBottom="10.0dip"
				           	android:textSize="15.0dip"
				           	android:text="333"
				            />
    					 -->
					   	<ImageView 
					   	    android:src="@drawable/ico_star1"
					   	    android:layout_width="wrap_content"
					   	    android:layout_height="wrap_content"/>
					   	<ImageView 
					   	    android:src="@drawable/ico_star1"
					   	    android:layout_width="wrap_content"
					   	    android:layout_height="wrap_content"/>
					   	<ImageView 
					   	    android:src="@drawable/ico_star1"
					   	    android:layout_width="wrap_content"
					   	    android:layout_height="wrap_content"/>
					   	<ImageView 
					   	    android:src="@drawable/ico_star2"
					   	    android:layout_width="wrap_content"
					   	    android:layout_height="wrap_content"/>
				   	      
					   	
					   <LinearLayout
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:gravity="end" >
			   	
						  	<TextView 
					       		android:id="@+id/my_activity_grades"  
					    		android:layout_width="wrap_content" 
					           	android:layout_height="wrap_content" 
					           	android:layout_marginBottom="10.0dip"
					           	android:layout_marginEnd="2dp"
					           	android:textSize="15.0dip"
					           	android:textColor="#84dfd8"
					           	android:text="368"
					            />
						  	<TextView 
					       		android:id="@+id/my_activity_grades_name"  
					    		android:layout_width="wrap_content" 
					           	android:layout_height="wrap_content" 
					           	android:layout_marginBottom="10.0dip"
					           	android:textSize="15.0dip"
					           	android:textColor="#999999"
					           	android:text="积分"
					            />
						  	 
						  	 <ImageButton
						    	android:id="@+id/my_activity_ibtn_help"
						      	android:layout_width="18dip" 
						        android:layout_height="18dip"
						        android:layout_marginStart="10.0dip"
					           	android:layout_alignParentEnd="true"
					           	android:scaleType="fitCenter"
						        android:background="@drawable/ico_help"
						        android:contentDescription="@string/myChanges_activity_share_desc"
						        />
					  	 </LinearLayout>
				   	</LinearLayout>
				   	
	    	    </LinearLayout>

		    </RelativeLayout>
        
    </LinearLayout>
    
    <RelativeLayout  
        android:id="@+id/my_activity_rl_user_info"
   	    android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		>
     		
    	<TextView
       		android:id="@+id/user_info"  
    		android:layout_width="wrap_content" 
           	android:layout_height="wrap_content" 
           	android:textSize="16.0dip"
           	android:textColor="#999999"
           	android:gravity="center_vertical"
           	android:layout_marginStart="20dp"
           	android:text="@string/my_activity_tv_user_info"
           	android:drawableStart="@drawable/ico_peoplemsg"
           	android:drawablePadding="20dp"
           	android:paddingTop="5dp"
           	android:paddingBottom="5dp"
            />
    	
   		<ImageView
	      	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
           	android:layout_alignParentEnd="true"
           	android:paddingStart="10dp"
           	android:paddingEnd="10dp"
           	android:layout_centerVertical="true"
	        android:src="@drawable/arrow_right"/>
     		
	</RelativeLayout>
    <RelativeLayout
        android:id="@+id/my_activity_rl_changes"
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		android:layout_marginTop="15dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		>
     		<TextView 
	       		android:id="@+id/user_info_change"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:textSize="16.0dip"
	           	android:textColor="#999999"
	           	android:text="@string/my_activity_tv_user_info_change"
		        android:gravity="center_vertical"
	           	android:layout_marginStart="20dp"
	           	android:drawableStart="@drawable/ico_change"
	           	android:drawablePadding="20dp"
	           	android:paddingTop="5dp"
           		android:paddingBottom="5dp"
	            />
     		
	   		<ImageView
		      	android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
	           	android:layout_alignParentEnd="true"
	           	android:paddingStart="10dp"
	           	android:paddingEnd="10dp"
	           	android:layout_centerVertical="true"
		        android:src="@drawable/arrow_right"/>
	</RelativeLayout>
	<View android:layout_height="1px" 
	    android:background="#84dfd8" 
	    android:layout_width="fill_parent"
	    android:layout_marginStart="30dp"
		android:layout_marginEnd="30dp"
		>
	    
	</View>
    <RelativeLayout
        android:id="@+id/my_activity_rl_history"
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		>
     		<TextView 
	       		android:id="@+id/user_info_history"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:textSize="16.0dip"
	           	android:textColor="#999999"
	           	android:text="@string/my_activity_tv_user_info_history"
	           	android:gravity="center_vertical"
	           	android:layout_marginStart="20dp"
	           	android:drawableStart="@drawable/ico_history"
	           	android:drawablePadding="20dp"
   				android:paddingTop="5dp"
          	 	android:paddingBottom="5dp"
	            />
     		
	   		<ImageView
		      	android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
	           	android:layout_alignParentEnd="true"
	           	android:paddingStart="10dp"
	           	android:paddingEnd="10dp"
	           	android:layout_centerVertical="true"
		        android:src="@drawable/arrow_right"/>
	</RelativeLayout>
	
    <RelativeLayout  
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		android:layout_marginTop="15dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		>
     		<TextView 
	       		android:id="@+id/user_info_setting"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:textSize="16.0dip"
	           	android:textColor="#999999"
	           	android:text="@string/my_activity_tv_user_info_setting"
	           	android:gravity="center_vertical"
	           	android:layout_marginStart="20dp"
	           	android:drawableStart="@drawable/ico_set"
	           	android:drawablePadding="20dp"
	           	android:paddingTop="5dp"
           		android:paddingBottom="5dp"
	            />
     		
	   		<ImageView
		      	android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
	           	android:layout_alignParentEnd="true"
	           	android:paddingStart="10dp"
	           	android:paddingEnd="10dp"
	           	android:layout_centerVertical="true"
		        android:src="@drawable/arrow_right"/>
	</RelativeLayout>
	
    <RelativeLayout  
   	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginTop="15dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		>
   		   <Button
	        android:id="@+id/login_activity_bt_login"
	        android:background="#49c6bd"
	        android:textColor="@color/white"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:text="@string/my_activity_btn_logout"/>
	</RelativeLayout>

</LinearLayout>
