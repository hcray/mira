<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4f3f2"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/detection_activity_menu_rl_title"
        style="@style/title"
        android:background="#81d8cf"
        android:visibility="visible" >

        <TextView
            android:id="@+id/detection_menu_activity_title"
            style="@style/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/detection_menu_activity_title"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detection_menu_activity_ll_imgSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="7"
        android:background="#ffffff" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/detection_menu_acitivity_photo"
            android:scaleType="centerInside"
            android:src="@drawable/index_photo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <ImageView
            android:id="@+id/detection_menu_activity_iv_back"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/detection_menu_acitivity_menu"
            android:scaleType="centerInside"
            android:src="@drawable/menubar" 
            />

        <TextView
            android:id="@+id/detection_menu_activity_nose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="95dp"
            android:background="@drawable/menubar_on"
            android:gravity="center"
            android:text="@string/detection_menu_activity_nose_value"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detection_menu_activity_face"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="95dp"
            android:background="@drawable/menubar_on"
            android:gravity="center"
            android:text="@string/detection_menu_activity_face_value"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detection_menu_activity_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/menubar_on"
            android:gravity="center"
            android:text="@string/detection_menu_activity_head_value"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detection_menu_activity_chin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/menubar_on"
            android:gravity="center"
            android:text="@string/detection_menu_activity_chin_value"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detection_menu_activity_menu_selected"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/detection_menu_acitivity_menu_select_part"
            android:textColor="#81d8cf"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>