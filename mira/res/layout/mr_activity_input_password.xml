<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

   <RelativeLayout
        android:id="@+id/inputPassword_title"
        style="@style/title"
        android:background="#81d8cf"
        android:visibility="visible" >

        <TextView
            android:id="@+id/textView1"
            style="@style/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/inputPassword_activity_tv_title"
            android:textColor="@color/white" />
    </RelativeLayout>
    
    <LinearLayout 
      	android:id="@+id/inputPassword_uly"
       	android:layout_width="fill_parent" 
       	android:layout_height="wrap_content"
       	android:layout_marginLeft="20dp" 
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal"
       	android:layout_below="@id/inputPassword_title">
          <TextView 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="8.0dip" 
            android:layout_marginTop="10.0dip" 
            android:textSize="16dip" 
            android:textStyle="bold"
            android:textColor="#ff000000" 
            android:text="@string/inputPassword_activity_vcode" />
          
          <EditText 
            android:id="@+id/inputPassword_et_vcode" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:minWidth="80dp" 
            android:layout_marginTop="10.0dip" 
            android:layout_marginLeft="8.0dip" 
            android:layout_marginRight="8.0dip" 
            android:background="@null"
            android:textSize="16sp"
            android:maxLines="1"
            android:singleLine="true" 
            android:selectAllOnFocus="true" 
            android:inputType="textPassword" />
          
          <LinearLayout        	
              android:layout_width="fill_parent" 
		      android:layout_height="wrap_content"
			  android:orientation="horizontal">
			  
             <Button 
	             android:id="@+id/inputPassword_btn_reset_send"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="重发"/>
          
          <TextView 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="8.0dip" 
            android:layout_marginTop="10.0dip" 
            android:textSize="16dip" 
            android:textColor="#ff000000" 
            android:text="60"/>
          </LinearLayout>
          
      </LinearLayout>
      
      <LinearLayout 
      	android:id="@+id/inputPassword_uly2"
       	android:layout_width="fill_parent" 
       	android:layout_height="wrap_content"
       	android:layout_marginLeft="20dp" 
	    android:layout_marginRight="20dp"
	    android:orientation="horizontal"
       	android:layout_below="@id/inputPassword_uly">
          <TextView 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="8.0dip" 
            android:layout_marginTop="10.0dip" 
            android:textSize="16dip" 
            android:textStyle="bold"
            android:textColor="#ff000000" 
            android:text="@string/login_activity_password" />
          
          <EditText 
            android:id="@+id/inputPassword_et_password" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip" 
            android:layout_marginLeft="8.0dip" 
            android:layout_marginRight="8.0dip" 
            android:background="@null"
            android:hint="@string/inputPassword_activity_password_hint" 
            android:textSize="16sp"
            android:maxLines="1"
            android:singleLine="true" 
            android:selectAllOnFocus="true" 
            android:inputType="textPassword" />
      </LinearLayout>
      
      <LinearLayout 
		android:id="@+id/inputPassword_uly3"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp" 
		android:layout_marginRight="20dp"
		android:layout_marginTop="20dp"
		android:layout_below="@id/inputPassword_uly2">
          
	    <Button 
	        android:id="@+id/inputPassword_btn_next"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/inputPassword_btn_next"/>
	</LinearLayout>

</RelativeLayout>
