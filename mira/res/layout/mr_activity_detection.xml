<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4f3f2"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/title"
        style="@style/title"
        android:background="#81d8cf"
        android:visibility="visible" >

        <TextView
            android:id="@+id/detection_activity_title"
            style="@style/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/detection_activity_title"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/index_activity_ll_imgSwitcher"
        android:layout_width="wrap_content"
        android:layout_weight="7" 
        android:background="#ffffff"
        android:layout_margin="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:src="@drawable/index_photo"
            android:contentDescription="@string/detection_acitivity_photo"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/menubar" 
            android:contentDescription="@string/detection_acitivity_menu"
            />

        <TextView
            android:id="@+id/detection_activity_nose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imageView1"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/detection_activity_chin"
            android:background="@drawable/menubar_off"
            android:gravity="center"
            android:text="@string/detection_activity_nose_value"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/detection_activity_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/detection_activity_nose"
            android:layout_marginStart="43dp"
            android:background="@drawable/menubar_off"
            android:gravity="center"
            android:text="@string/detection_activity_head_value"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/detection_activity_chin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/detection_activity_nose"
            android:layout_marginEnd="41dp"
            android:background="@drawable/menubar_off"
            android:gravity="center"
            android:text="@string/detection_activity_chin_value"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/detection_activity_face"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imageView1"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/detection_activity_head"
            android:background="@drawable/menubar_on"
            android:gravity="center"
            android:text="@string/detection_activity_face_value"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/detection_activity_menu_selected"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/detection_activity_face"
            android:text="脸颊"
            android:textSize="16sp" 
            android:textColor="#81d8cf" 
            />

    </RelativeLayout>

</LinearLayout>