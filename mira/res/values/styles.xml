<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>
	<style name="Transparent" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/launch_2208</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="title">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="table_back_line">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/z_bg_select</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="table_back_image">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:src">@drawable/z_back</item>
    </style>
    <style name="titletext">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="table_more_set">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/z_bg_select</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>
